<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/bottom_sheet_pin_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_margin="@dimen/margin_14dp"
        android:drawablePadding="@dimen/margin_8dp"
        android:drawableEnd="@drawable/ic_lock"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Crie o seu pin" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/bottom_sheet_pin_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/pin_hint"
        android:textSize="14sp"
        android:maxLength="4"
        android:inputType="numberPassword"
        android:layout_margin="@dimen/margin_14dp"
        app:layout_constraintTop_toBottomOf="@id/bottom_sheet_pin_title_text"/>

    <TextView
        android:id="@+id/bottom_sheet_pin_error_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/red"
        android:visibility="gone"
        android:text="@string/wrong_pin_label"
        android:layout_marginStart="@dimen/margin_14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_sheet_pin_enter"
        app:layout_constraintTop_toBottomOf="@id/bottom_sheet_pin_text" />

    <TextView
        android:id="@+id/bottom_sheet_pin_enter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_pin_text_auth"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/margin_14dp"
        android:padding="@dimen/margin_14dp"
        android:gravity="center"
        android:background="@color/purple_700"
        app:layout_constraintTop_toBottomOf="@id/bottom_sheet_pin_error_msg"/>

</androidx.constraintlayout.widget.ConstraintLayout>